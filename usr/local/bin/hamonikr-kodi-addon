#!/bin/bash

RUID=$(who | awk 'FNR == 1 {print $1}')
RUSER_UID=$(id -u ${RUID})

KODI_VERSION=$(kodi --version | head -1 | awk '{print $1}')

echo $RUID

case "$1" in
    copy)
        if [ ! -z "$RUID" ]; then
            if [ ! -d "/home/${RUID}/.kodi" ]; then
                mkdir /home/${RUID}/.kodi
                chown ${RUID}:${RUID} /home/${RUID}/.kodi
            fi

            cp -rf /usr/share/hamonikr-kodi-addon/addons /home/${RUID}/.kodi/addons
            cp -rf /usr/share/hamonikr-kodi-addon/userdata /home/${RUID}/.kodi/userdata
        else
            echo "check RUID '$RUID'"
        fi
    ;;
    backup)
        if [ ! -z "$RUID" ]; then
            sudo rm -r /usr/share/hamonikr-kodi-addon/backup/*

            sudo cp -rf /home/${RUID}/.kodi/addons /usr/share/hamonikr-kodi-addon/backup/addons
            sudo cp -rf /home/${RUID}/.kodi/userdata /usr/share/hamonikr-kodi-addon/backup/userdata
        else
            echo "check RUID '$RUID'"
        fi
    ;;
    restore)
        if [ ! -z "$RUID" ]; then
            rm -r /home/${RUID}/.kodi/*

            cp -rf /usr/share/hamonikr-kodi-addon/backup/addons /home/${RUID}/.kodi/addons
            cp -rf /usr/share/hamonikr-kodi-addon/backup/userdata /home/${RUID}/.kodi/userdata
        else
            echo "check RUID '$RUID'"
        fi
    ;;
    *)
        echo "unknown argument '$1'"
        exit 1
    ;;
esac